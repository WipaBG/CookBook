<section class="search-container">
    <h2>Search Recipes</h2>
    <form method="GET">
        <input type="text" id="search" name="search" placeholder="Search for recipes..." value="{{searchName}}">
        <button type="submit">Search</button>
    </form>
    <div class="search-results">
        {{#if recipes}}
        {{#each recipes}}
        {{> recipe}}
        {{/each}}
        <!-- Add more search results here -->
        {{else}}
        <p class="no-match">There are no recipes found yet!</p>
        {{/if}}
</section>